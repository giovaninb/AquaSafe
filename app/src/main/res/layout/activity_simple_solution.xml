<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background"
    tools:context=".SimpleSolution.SimpleSolutionActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Risk-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="161dp"
                android:scaleType="centerInside"
                android:src="@drawable/risk1"
                android:paddingRight="4dp"
                android:paddingLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinalization_risk"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!--Exit-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="161dp"
                android:scaleType="centerInside"
                android:src="@drawable/exit1"
                android:paddingRight="4dp"
                android:paddingLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinalization_emergency"
                android:layout_gravity="center"/>

        </LinearLayout>

        <!--Danger-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="161dp"
                android:scaleType="centerInside"
                android:src="@drawable/danger1"
                android:paddingRight="4dp"
                android:paddingLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinalization_danger"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!--Obrigation-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="161dp"
                android:scaleType="centerInside"
                android:src="@drawable/obrigation1"
                android:paddingRight="4dp"
                android:paddingLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinalization_obrigation"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
