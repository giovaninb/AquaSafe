<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/protection_q1" />

    <RadioGroup
        android:id="@+id/groupProtection_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbtn1_yes_protection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/yes_rdbtn" />

        <RadioButton
            android:id="@+id/rdbtn1_no_protection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/no_rdbtn" />
    </RadioGroup>

    <EditText
        android:id="@+id/justProtection_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/corrective_action"
        android:inputType="text|textMultiLine" />

