    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eletrical_q1" />

    <RadioGroup
        android:id="@+id/groupEletrical_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbtn1_yes_eletrical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/yes_rdbtn" />

        <RadioButton
            android:id="@+id/rdbtn1_no_eletrical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/no_rdbtn" />
    </RadioGroup>

    <EditText
        android:id="@+id/justEletrical_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/corrective_action"
        android:inputType="text|textMultiLine" />

