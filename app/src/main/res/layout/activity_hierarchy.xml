<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hazard.HierarchyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="@string/information_about_hazard"/>

        <br.gov.rs.ddpa_seapi.aquasaude.aquasafe.Utils.PinchImageView
            android:layout_width="match_parent"
            android:id="@+id/hierarchy_image"
            android:src="@drawable/hierarquia"
            android:layout_height="280dp" />

    </LinearLayout>
</ScrollView>